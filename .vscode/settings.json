{
  "files.exclude": {
    "*.log": true,
    "tags.*": true,
    "node_modules": true,
    ".vim": true,
    ".nvimlog": true,
    "dist": true,
    ".test": true,
    "coverage": true,
    ".history": true,
    ".dccache": true,
    ".yarn": true,
    ".pnp.*": true,
    "*.tsbuildinfo": true
  },
  "search.exclude": {
    "*.log": true,
    "tags.*": true,
    "node_modules": true,
    ".vim": true,
    ".nvimlog": true,
    "dist": true,
    ".test": true,
    "coverage": true,
    ".history": true,
    ".dccache": true,
    ".yarn": true,
    ".pnp.*": true,
    "*.tsbuildinfo": true,
    "**/.yarn": true,
    "**/.pnp.*": true
  },
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "cSpell.words": [
    "esbuild",
    "escompat",
    "ksuid",
    "lcov",
    "sonarjs",
    "undici",
    "unwatch",
    "xksuid"
  ],
  "eslint.nodePath": ".yarn/sdks",
  "prettier.prettierPath": ".yarn/sdks/prettier/index.cjs",
  "typescript.tsdk": ".yarn/sdks/typescript/lib",
  "explorerExclude.backup": null,
  "npm.packageManager": "yarn",
  "debug.javascript.autoAttachFilter": "smart",
  "debug.javascript.breakOnConditionalError": true,
  "debug.javascript.defaultRuntimeExecutable": {
    "node": "yarn",
    "pwa-node": "yarn"
  },
  "debug.javascript.autoAttachSmartPattern": [
    "${workspaceFolder}/**",
    "!**/node_modules/**",
    "**/$KNOWN_TOOLS$/**",
    "!**/yarn-*",
    "!**/ava-*/**/cli.mjs"
  ],
  "testify.testRunnerPath": "yarn test",
  "testify.envVars": {
    "NODE_ENV": "test"
  },
  "eslint.rules.customizations": [
    {
      "rule": "prettier/prettier",
      "severity": "off"
    }
  ]
}
